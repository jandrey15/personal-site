{
  "version": 2,
  "name": "Site John Serrano",
  "build": {
    "env": {
      "NODE_ENV": "production",
      "PORT": "3000",
      "API_URL": "https://api.johnserrano.co/ghost/api/v2/content",
      "API_KEY": "@api_key_johnserrano",
      "STATIC_URL": "https://static.johnserrano.co",
      "DOMAIN_URL": "https://johnserrano.co"
    }
  },
  "routes": [
    { "src": "/blog/(?<slug>[^/]+)", "dest": "/post?slug=$slug" },
    { "src": "/tags/(?<slug>[^/]+)", "dest": "/tag?slug=$slug" },
    { "src": "^/ads.txt", "dest": "/static/ads.txt" },
    { "src": "/.well-known/acme-challenge/(?<slug>[^/]+)/$", "dest": "/" },
    {
      "src": "/blog/",
      "status": 301,
      "headers": { "Location": "https://johnserrano.co/blog" }
    },
    {
      "src": "/tags/",
      "status": 301,
      "headers": { "Location": "https://johnserrano.co/tags" }
    },
    {
      "src": "/blog/(?<slug>[^/]+)/$",
      "status": 301,
      "headers": { "Location": "https://johnserrano.co/blog/$slug" }
    }
  ]
}