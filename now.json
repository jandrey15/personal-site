{
  "version": 2,
  "name": "Site John Serrano",
  "build": {
    "env": {
      "NODE_ENV": "production",
      "PORT": "3000",
      "API_URL": "https://api.johnandrey.xyz/ghost/api/v2/content",
      "API_KEY": "@api_key_johnserrano2",
      "STATIC_URL": "https://static.johnandrey.xyz",
      "DOMAIN_URL": "https://johnandrey.xyz"
    }
  },
  "routes": [
    { "src": "/blog/(?<slug>[^/]+)", "dest": "/post?slug=$slug" },
    { "src": "/tags/(?<slug>[^/]+)", "dest": "/tag?slug=$slug" },
    { "src": "^/ads.txt", "dest": "/static/ads.txt" },
    {
      "src": "/blog/",
      "status": 301,
      "headers": { "Location": "https://johnandrey.xyz/blog" }
    },
    {
      "src": "/tags/",
      "status": 301,
      "headers": { "Location": "https://johnandrey.xyz/tags" }
    },
    {
      "src": "/blog/(?<slug>[^/]+)/$",
      "status": 301,
      "headers": { "Location": "https://johnandrey.xyz/blog/$slug" }
    }
  ]
}